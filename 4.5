#include <stdio.h>

int main() {
    int days;
    long seconds;

    // ขอให้ผู้ใช้กรอกจำนวนวัน
    printf("Input Days : \n");
    scanf("%d", &days);

    // คำนวณจำนวนวินาที
    seconds = days * 24 * 60 * 60; // 1 วัน = 24 ชั่วโมง, 1 ชั่วโมง = 60 นาที, 1 นาที = 60 วินาที

    // แสดงผลลัพธ์
    printf("%d days = %ld seconds\n", days, seconds);

    return 0;
}
