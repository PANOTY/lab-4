#include <stdio.h>

int main() {
    char employeeID[11]; // รหัสประจำตัวพนักงาน (สูงสุด 10 ตัวอักษร + 1 สำหรับ null terminator)
    int workingHours;
    float salaryPerHour;
    float totalSalary;

    // รับข้อมูลรหัสประจำตัวพนักงาน
    printf("Input the Employees ID(Max. 10 chars): \n");
    scanf("%10s", employeeID); // จำกัดการอ่านที่ 10 ตัวอักษร

    // รับข้อมูลจำนวนชั่วโมงทำงาน
    printf("Input the working hrs: \n");
    scanf("%d", &workingHours);

    // รับข้อมูลรายได้ต่อชั่วโมง
    printf("Salary amount/hr: \n");
    scanf("%f", &salaryPerHour);

    // คำนวณเงินเดือนรวม
    totalSalary = workingHours * salaryPerHour;

    // แสดงผลลัพธ์
    printf("Employees ID = %s\n", employeeID);
    printf("Salary = U$ %.2f\n", totalSalary); // แสดงเงินเดือนในรูปแบบทศนิยม 2 ตำแหน่ง

    return 0;
}
