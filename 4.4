#include <stdio.h>

int main() {
    float height, base, area;

    // ขอให้ผู้ใช้กรอกค่า ส่วนสูง และ ฐาน
    printf("Enter H & W :\n");
    scanf("%f %f", &height, &base);

    // คำนวณพื้นที่สามเหลี่ยม
    area = (height * base) / 2;

    // แสดงผลลัพธ์
    printf("Triangle Area : %.1f\n", area);

    return 0;
}
